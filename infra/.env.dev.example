# =============================================================================
# Development Environment Variables
# =============================================================================
# Copy this file to .env.dev and adjust values for your local setup
# Usage: Used by docker-compose.dev.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000

# -----------------------------------------------------------------------------
# Database Configuration - PostgreSQL
# -----------------------------------------------------------------------------
# Container service name: rrent-postgres
POSTGRES_DB=rrent_dev
POSTGRES_USER=rrent_user
POSTGRES_PASSWORD=rrent_dev_password

# Database URL for Prisma (will be overridden in docker-compose for container network)
# For host machine access: postgresql://rrent_user:rrent_dev_password@localhost:5432/rrent_dev
DATABASE_URL=postgresql://rrent_user:rrent_dev_password@localhost:5432/rrent_dev

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Development JWT secret (use a strong random string in production)
JWT_SECRET=dev-jwt-secret-change-in-production-12345678
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Rate Limiting / Throttling
# -----------------------------------------------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allow all origins in development
CORS_ORIGIN=*

# Or specify your frontend dev server
# CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# Optional: Redis (if implemented)
# -----------------------------------------------------------------------------
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Optional: Email Service (if implemented)
# -----------------------------------------------------------------------------
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=RRent Dev <dev@localhost>

# -----------------------------------------------------------------------------
# Optional: File Storage
# -----------------------------------------------------------------------------
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=10485760

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
TZ=Asia/Shanghai
DEFAULT_TIMEZONE=Asia/Shanghai

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable GraphQL Playground, Swagger, etc.
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
